{
  // Name of the development container (appears in VS Code)
  "name": "Devcontainer Feature Development Environment",

  // Selected base image (Debian, prepared for devcontainers)
  "image": "mcr.microsoft.com/devcontainers/base:debian",

  // Definition of features to install
  "features": {
    // Installs common utilities like curl, wget, and git and update machine
    "ghcr.io/devcontainers/features/common-utils:latest": {},
    // Feature to configure Docker access
    "ghcr.io/devcontainers/features/docker-in-docker:latest": {},
    // Feature to install the devcontainer CLI itself
    "ghcr.io/devcontainers-extra/features/devcontainers-cli:latest": {}
  },

  // VS Code environment customization
  "customizations": {
    "vscode": {
      // List of VS Code extensions to automatically install in the container
      "extensions": [
        "tinaciousdesign.theme-tinaciousdesign", // Tinacious color theme
        "thang-nm.flow-icons", // Flow icon theme

        "donjayamanne.githistory", // Git History extension
        "wayou.vscode-todo-highlight", // Highlights TODO comments

        "ms-azuretools.vscode-docker",    // Docker UI management
        "mads-hartmann.bash-ide-vscode"   // Bash auto-completion
      ],
      "settings": {
        // Sets the default formatter
        // Enables format on save
        "editor.formatOnSave": true,
        // Style & Theme
        "workbench.colorTheme": "Tinacious Design (Light)",
        "workbench.iconTheme": "flow-dim",
        "workbench.colorCustomizations": {
          "[Tinacious Design (Light)]": {
            "activityBar.background": "#e7e8e6",
